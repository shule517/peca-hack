<p id="notice"><%= notice %></p>

<h1>Circles</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Twitter</th>
      <th>Goal</th>
      <th>Join</th>
      <th>Image</th>
      <th>Detail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @circles.each do |circle| %>
      <tr>
        <td><%= circle.name %></td>
        <td><%= circle.twitter_id %></td>
        <td><%= circle.goal %></td>
        <td><%= circle.join %></td>
        <td><%= circle.image %></td>
        <td><%= circle.detail %></td>
        <td><%= link_to 'Show', circle %></td>
        <td><%= link_to 'Edit', edit_circle_path(circle) %></td>
        <td><%= link_to 'Destroy', circle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Circle', new_circle_path %>
