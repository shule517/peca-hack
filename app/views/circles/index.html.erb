<p id="notice"><%= notice %></p>

<h1>参加表明</h1>

<table cellspacing="15">
  <thead>
    <tr>
      <th width="200px">名前</th>
      <th width="400px">今回やること！</th>
      <th width="100px">発表会の参加</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @circles.each do |circle| %>
      <tr>
        <td><%= circle.name %></td>
        <td><%= circle.goal %></td>
        <td>
          <% if circle.join = 1 %>
          <%= "参加します！" %>
          <% else %>
          <%= "考え中。。。" %>
          <% end %>
        </td>
        <td><small><%= link_to '修正', edit_circle_path(circle) %></small></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h4><%= link_to '参加表明登録', new_circle_path %></h4>
